{
  "name": "clicknship_be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "engines": {
    "node": "v22.5.1"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "deploy": "npm run build && ./src/scripts/migrate.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:format": "npx prisma format --schema prisma/master/schema.prisma && npx prisma format --schema prisma/tenant/schema/ ",
    "generate": "npx prisma generate --schema prisma/master/schema.prisma && npx prisma generate --schema prisma/tenant/schema/ ",
    "migrate:master": "npx prisma migrate dev --schema prisma/master/schema.prisma",
    "create:migration": "npx prisma migrate dev --create-only --schema prisma/tenant/schema/",
    "migrate:tenants": "./src/scripts/migrate.sh",
    "rollback:tenants": "./src/scripts/rollback.sh",
    "resolve:tenants": "npx prisma migrate resolve --schema prisma/tenant/schema/ --rolled-back",
    "status:tenants": "npx prisma migrate status --schema prisma/tenant/schema/",
    "migrate": "npm run generate && npm run create:migration && npm run migrate:tenants",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "g": "nest g --flat --no-spec "
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^11.0.3",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.11.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cryptr": "^6.3.0",
    "nanoid": "^3.3.11",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^6.11.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
