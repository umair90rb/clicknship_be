generator client {
  provider        = "prisma-client-js"
  output          = "client"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("MASTER_DATABASE_URL")
}

model Tenant {
  tenantId    String  @id @unique @map("tenant_id")
  dbName      String? @unique @map("db_name")
  companyName String? @map("company_name")

  @@map("tenants")
}

model TenantOrderTracking {
  trackingStartedAt DateTime @default(now()) @map("tracking_started_at")
  trackingEndedAt DateTime? @map("tracking_ended_at")
  noOfErrors Int @map("no_of_errors")
  noOfOrders Int @map("no_of_orders")
  tenantId    String  @id @unique @map("tenant_id")
  tenant  Tenant  @relation(fields: [tenantId], references: [tenantId])

  @@map("tenant_order_tracking")
}


model City {
  id                  Int                 @id() @default(autoincrement())
  city                String              @unique()
  courierMappedCities CourierMappedCity[]

  @@map("cities")
}

model CourierMappedCity {
  id            Int     @id() @default(autoincrement())
  courier       String
  mapped        String
  courierCityId String? @map("courier_city_id")
  code          String?

  cityId Int  @map("city_id")
  city   City @relation(fields: [cityId], references: [id])

  @@map("courier_mapped_cities")
}
