model CourierService {
  id              Int     @id @default(autoincrement())
  name            String
  courier         String
  dispatchAddress String  @map("dispatch_address")
  returnAddress   String  @map("return_address")
  active          Boolean @default(true)

  orders               Order[]
  courierServiceFields CourierServiceField[]

  @@map("courier_services")
}

model CourierServiceField {
  id    Int    @id @default(autoincrement())
  field String
  value String

  courierServiceId Int            @map("courier_service_id")
  courierService   CourierService @relation(fields: [courierServiceId], references: [id])

  @@map("courier_service_fields")
}

model OrderShipment {
  id     Int     @id @default(autoincrement())
  cn     String?
  status String?

  lastTrackedAt DateTime? @map("last_tracked_at")
  trackingJson  Json?   @map("tracking_json")

  orderId Int   @unique() @map("order_id")
  order   Order @relation(fields: [orderId], references: [id])

  courierServiceId Int @map("courier_service_id")

  @@index([cn])
  @@index([orderId])
  @@map("order_shipments")
}