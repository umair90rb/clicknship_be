generator client {
  provider = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

model Tenant {
    tenantId String @id @unique @map("tenant_id")
    dbName String? @unique @map("db_name")
    companyName String? @map("company_name")

    @@map("tenants")
}

model User {
    id Int @id @default(autoincrement())
    email String @unique
    password String
    name String
    phone String

    @@map("users")
}

model Secret {
    id Int @id @default(autoincrement())
    key String @unique
    value String

    @@map("secrets")
}

model Product {
    id Int @id @default(autoincrement())
    name String
    price Int

    @@map("products")
}
